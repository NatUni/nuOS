# Official updates and community support available at https://nuos.org .
# Professional services available at https://ccsys.com .

NUOS_VER=0.0.12.99a0

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"

require_tmp interested
if [ $# -eq 0 ]; then
	ls -d $PKG_DBDIR/*_*/dependencies | sed -e 's|^'"$PKG_DBDIR"'/||;s|/dependencies$||;s|_|/|'
else
	echo $@ | xargs -n 1
fi >> "$interested"

echo 'const nodeData = ['
for p in `cat "$interested"`; do p_=`echo $p | tr / _`
	echo "	{'name': '$p'," \
		"'radius': Math.sqrt(`{ wc -l $PKG_DBDIR/$p_/dependencies/all 2> /dev/null || echo 0; } | xargs | cut -w -f 1`)," \
		"'color': '`echo $p | sha256 -q | cut -c 1-6`'},"
done
echo '];'
echo 'const linkData = ['
for s in `cat "$interested"`; do s_=`echo $s | tr / _`
	[ -f $PKG_DBDIR/$s_/dependencies/all ] || continue
	sets_intrsctn x "$interested" $PKG_DBDIR/$s_/dependencies/all
	for t in `grep -vw ports-mgmt/pkg $x`; do
		echo "	{'source': '$s'," \
			"'target': '$t'},"
	done
	retire_tmp x
done
echo '];'

echo 'const options = {'
for p in `cat "$interested"`; do p_=`echo $p | tr / _`
	[ -f $PKG_DBDIR/$p_/options ] || continue
	echo "  '$p': \"$(sed -e '1d;$d;s/^ *//;s/$/\\n/' $PKG_DBDIR/$p_/options | tr -d '\n' )\","
done
echo '};'

echo 'const settings = {'
for p in `cat "$interested"`; do p_=`echo $p | tr / _`
	[ -f $PKG_DBDIR/$p_/settings ] || continue
	echo "  '$p': \"$(sed -e 's/$/\\n/' $PKG_DBDIR/$p_/settings | tr -d '\n' )\","
#	echo "  '$p': {$(sed -e "s/^/'/;s/=/': '/;s/\$/',\ /" $PKG_DBDIR/$p_/settings | tr -d '\n' )},"
done
echo '};'

retire_tmp interested
