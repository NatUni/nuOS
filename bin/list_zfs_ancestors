# Professional services available at https://ccsys.com .

NUOS_VER=0.0.12.99a0

case $# in
	0) ds=`mount -p | awk '$2 == "/" {print $1}'`;;
	1) ds=$1;;
	*) exit 22;;
esac

while
	echo ${o:=$ds}
	o=`zfs list -H -o origin ${o%@*}`
	[ x- != x$o ]
do :; done | tail -r
